<h1>My Portfolio</h1>
<div class="search-area">
    <h3>Search Stocks</h3>
    <%# needed to add data: {turbo: false} to render json in the StocksController   %>
    <%# adding remote: true turns the form to an AJAX request %>
    <%= form_tag search_stock_path, data: {turbo: false},  remote: true, method: :get do %>
        <div class="form-group row">
            <div class="col-sm-9 no-right-padding">
                <%= text_field_tag :stock, params[:stock], placeholder: "Stocker ticker symbol", autofocus: true, class: "form-control form-control-lg" %>
            </div>
            <div class="col-sm-3 no-left-padding">
                <%= button_tag type: :submit, class: "btn btn-success btn-lg" do %>
                    <i class="bi bi-search"></i> 
                <% end %>
            </div>
        </div>
    <% end %>
</div>
<%= render 'users/result' %>